{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "ES2020",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist/src/main",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "lib": ["ES2020", "DOM"],
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
  }